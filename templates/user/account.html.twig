{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}
{% endblock %}

{% block body %}
{{ dump(app.user) }}
    <br /><br />
    <h4>Compte</h4>

    {# Formulaire Account #}
    <div class="container">
        <div class="row">
            <div class="col-6">
                {{ user.username }}
            </div>
            <div class="col-6">
                {{ user.password }}
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                {{ user.firstname }}
            </div>
            <div class="col-6">
                {{ user.lastname }}
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                {{ user.email }}
            </div>
            <div class="col-6">
                {{ user.phone }}
            </div>
        </div>
    </div>

{% endblock %}